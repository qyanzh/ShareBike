<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.west2summer.dialog.BikeInfoDialogViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:text="@string/want_rent"
            app:layout_anchor="@+id/root_linear"
            app:layout_anchorGravity="end|top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/root_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingStart="@dimen/bottom_sheet_start_margin"
                android:paddingTop="32dp"
                android:paddingEnd="@dimen/bottom_sheet_start_margin"
                tools:context=".dialog.BikeInfoDialogFragment">

                <!--联系方式-->
                <LinearLayout
                    android:id="@+id/buttonShowContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:minHeight="@dimen/bottom_sheet_item_height"
                    android:orientation="horizontal"
                    android:visibility="@{viewModel.fabState==0? View.GONE : View.VISIBLE}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/ic_person_black_24dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/show_contact"
                        android:textSize="16sp" />
                </LinearLayout>

                <!--地点-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:minHeight="@dimen/bottom_sheet_item_height"
                    android:orientation="horizontal"
                    android:visibility="@{viewModel.bikeInfo.place==null ? View.GONE : View.VISIBLE}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/ic_location_on_black_24dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@{viewModel.bikeInfo.place}"
                        android:textSize="16sp"
                        tools:text="福建省福州市闽侯县福州大学学生公寓32号楼510" />
                </LinearLayout>

                <!--电池剩余-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bottom_sheet_item_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:visibility="@{viewModel.bikeInfo.shouldShowTime() ? View.VISIBLE : View.GONE}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/ic_date_range_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@{viewModel.bikeInfo.timeString()}"
                        android:textSize="16sp"
                        tools:text="99/12/04 9:41 ~ 98/12/31 12:41" />
                </LinearLayout>


                <!--时间-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:minHeight="@dimen/bottom_sheet_item_height"
                    android:orientation="horizontal"
                    android:visibility="@{viewModel.bikeInfo.battery==null ? View.GONE : View.VISIBLE}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/ic_battery_charging_full_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@{viewModel.bikeInfo.batteryString()}"
                        android:textSize="16sp"
                        tools:text="50km" />
                </LinearLayout>

                <!--价格-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:minHeight="@dimen/bottom_sheet_item_height"
                    android:orientation="horizontal"
                    android:visibility="@{viewModel.bikeInfo.price==null ? View.GONE : View.VISIBLE}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="15dp"
                        app:srcCompat="@drawable/ic_iconfont_money" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@{viewModel.bikeInfo.priceString()}"
                        android:textSize="16sp"
                        tools:text="￥5.0" />
                </LinearLayout>

                <!--备注-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:minHeight="@dimen/bottom_sheet_item_height"
                    android:orientation="horizontal"
                    android:visibility="@{viewModel.bikeInfo.note==null ? View.GONE : View.VISIBLE}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/ic_more_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@{viewModel.bikeInfo.note}"
                        android:textSize="16sp"
                        tools:text="这是一条共享汽车的共享信息,我是这条共享信息的备注~ 三行差不多了吧,一般人不会写这么长的备注的,还差几个字我补一补." />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>